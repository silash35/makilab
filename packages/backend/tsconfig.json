{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "ESNext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@config": ["./config"],
      "@test/*": ["test/*"],
    },
    "types": ["vitest/globals"],
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"],
}
