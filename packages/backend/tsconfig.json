{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist"
  },
  "include": ["custom.d.ts","./src/*.ts", "**/*.d.ts"],
  "exclude": ["node_modules"]
}
